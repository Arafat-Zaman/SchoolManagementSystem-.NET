@model List<SchoolManagementSystem.Models.Student>

<h2>Students</h2>
<table>
    <tr>
        <th>Name</th>
        <th>Class</th>
        <th>Average Grade</th>
    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Name</td>
            <td>@student.ClassName</td>
            <td>@student.GetAverageGrade()</td>
            <td><a href="/Students/Details/@student.Id">Details</a></td>
        </tr>
    }
</table>
